@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner / Carousel -->
<div id="homeCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/images/banner1.jpg" class="d-block w-100 banner-high" alt="Banner 1">
            <div class="carousel-caption">
                <h3>Bộ Sưu Tập Giày 2025</h3>
                <p>Phong cách - Năng động - Thời thượng</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/banner2.jpg" class="d-block w-100 banner-high" alt="Banner 2">
        </div>
    </div>
    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<!-- Danh mục sản phẩm -->
<section class="product-categories container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="category-card">
                <div class="category-image">
                    <img src="~/Content/images/men.jpg" alt="Giày Nam">
                </div>
                <div class="category-content">
                    <h3>Giày Nam</h3>
                    <p>Phong cách lịch lãm</p>
                    <a href="#" class="btn-explore">Khám phá</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="category-card">
                <div class="category-image">
                    <img src="~/Content/images/women.jpg" alt="Giày Nữ">
                </div>
                <div class="category-content">
                    <h3>Giày Nữ</h3>
                    <p>Thời trang trẻ trung</p>
                    <a href="#" class="btn-explore">Khám phá</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Sản phẩm nổi bật -->
<section class="featured-products container py-5">
    <h2 class="text-center">Sản phẩm nổi bật</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card product-card">
                <img src="~/Content/images/shoes1.jpg" class="card-img-top" alt="Shoes">
                <div class="card-body text-center">
                    <h5 class="product-title">Nike Air Zoom</h5>
                    <p class="product-prices">
                        <span class="text-muted mr-2">2.500.000đ</span>
                        <span class="font-weight-bold">1.999.000đ</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
