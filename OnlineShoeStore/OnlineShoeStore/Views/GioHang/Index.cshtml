@{
    ViewBag.Title = "Giỏ hàng - MEODIGIAY";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!-- dùng layout chung -->
}

<div class="cart-main">
    <div class="cart-title">Giỏ hàng</div>
    <div class="row">
        <!-- Left: Cart Items -->
        <div class="col-lg-7 mb-4 mb-lg-0">
            <div id="cartContent"></div>
            <div class="cart-actions d-flex flex-wrap gap-2">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark mr-3 mb-2">
                    <i class="fas fa-arrow-left mr-2"></i>TIẾP TỤC XEM SẢN PHẨM
                </a>
                <button class="btn btn-dark mb-2" id="updateCartBtn">CẬP NHẬT GIỎ HÀNG</button>
            </div>
        </div>
        <!-- Right: Cart Summary -->
        <div class="col-lg-5">
            <div class="cart-summary-box">
                <div class="cart-summary-title">CỘNG GIỎ HÀNG</div>
                <div class="cart-summary-row"><span>Tạm tính</span><span id="cartSubtotal">0đ</span></div>
                <div class="cart-summary-row total"><span>Tổng</span><span id="cartTotal">0đ</span></div>
                <button class="btn btn-checkout">TIẾN HÀNH THANH TOÁN</button>
                <div class="cart-coupon">
                    <div class="mb-2" style="font-weight:500;">
                        <i class="fas fa-tag mr-2"></i>Mã ưu đãi
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Mã ưu đãi" id="couponInput">
                        <div class="input-group-append">
                            <button class="btn" id="applyCouponBtn">Áp dụng</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Thông tin dịch vụ -->
<div class="cart-service mt-5 mb-4">
    <div class="cart-service-item">
        <i class="fas fa-shipping-fast"></i>
        <span>Ship code toàn quốc</span>
    </div>
    <div class="cart-service-item">
        <i class="fas fa-box-open"></i>
        <span>Kiểm tra hàng trước khi thanh toán</span>
    </div>
    <div class="cart-service-item">
        <i class="fas fa-sync-alt"></i>
        <span>Đổi trả trong 7 ngày</span>
    </div>
    <div class="cart-service-item">
        <i class="fas fa-credit-card"></i>
        <span>Hình thức thanh toán</span>
    </div>
</div>
