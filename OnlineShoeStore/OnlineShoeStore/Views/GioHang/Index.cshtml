@model List<OnlineShoeStore.Models.GioHangItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-main">
    <div class="cart-title">Giỏ hàng</div>

    @if (Model == null || !Model.Any())
    {
        <div class="cart-empty">
            <img src="~/Content/images/empty-cart.png" alt="Empty Cart" />
            <p>Giỏ hàng của bạn đang trống!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <table class="table cart-table">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/Content/images2/@item.HinhAnh" class="cart-img" /></td>
                                <td>@item.TenSanPham</td>
                                <td>@item.Gia.ToString("N0") đ</td>
                                <td>
                                    <form action="@Url.Action("CapNhat", "GioHang")" method="post" style="display:flex;justify-content:center;align-items:center;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="number" name="soLuong" value="@item.SoLuong" min="1" style="width:60px;text-align:center;" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary ml-2">Cập nhật</button>
                                    </form>
                                </td>
                                <td>@item.ThanhTien.ToString("N0") đ</td>
                                <td>
                                    <a href="@Url.Action("Xoa", "GioHang", new { id = item.Id })" class="cart-remove">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left mr-2"></i> TIẾP TỤC MUA HÀNG
                </a>
            </div>

            <div class="col-lg-4">
                <div class="cart-summary-box">
                    <div class="cart-summary-title">CỘNG GIỎ HÀNG</div>
                    <div class="cart-summary-row">
                        <span>Tạm tính</span>
                        <span>@Model.Sum(x => x.ThanhTien).ToString("N0") đ</span>
                    </div>
                    <div class="cart-summary-row total">
                        <span>Tổng</span>
                        <span>@Model.Sum(x => x.ThanhTien).ToString("N0") đ</span>
                    </div>
                    <button class="btn btn-checkout">TIẾN HÀNH THANH TOÁN</button>
                </div>
            </div>
        </div>
    }
</div>
