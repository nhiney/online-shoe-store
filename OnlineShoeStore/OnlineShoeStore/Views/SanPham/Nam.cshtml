@{
    ViewBag.Title = "Giày Dép Nam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="featured-products py-5">
    <div class="container">
        <h2 class="text-center mb-4" style="color:#d4842c; font-weight: bold;">GIÀY DÉP NAM</h2>
        <div class="row">
            <!-- Dép Kẹp -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="product-card position-relative h-100 p-3 text-center border rounded shadow-sm bg-white" data-category="dep-kep">
                    <img src="~/Content/images2/nam_sn2.jpg" class="img-fluid mb-3" alt="Dép Kẹp 1">
                    <div class="product-title mb-2">Dép Kẹp Màu Đen</div>
                    <div class="product-prices mb-1">
                        <span class="font-weight-bold" style="font-size:1.2rem;">350,000đ</span>
                    </div>
                </div>
            </div>

            <!-- Copy các sản phẩm khác tương tự -->
            <!-- Lưu ý: thay đường dẫn ./images2/... thành ~/Content/images2/... -->

        </div>
    </div>
</section>

@section Styles {
    <style>
    .product-card img {
        height: 160px;
        object-fit: contain;
    }

    .product-title {
        font-size: 1rem;
        min-height: 48px;
    }

    .product-discount {
        z-index: 2;
    }

    .product-prices {
        font-size: 1.1rem;
    }

    @@media (max-width: 575.98px) {
        .product-card img { height: 120px; }
        .product-title { min-height: 36px; }
    }
    </style>
}
