@model OnlineShoeStore.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm - MEODIGIAY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5">
    <div class="row">
        <!-- Thư viện ảnh sản phẩm -->
        <div class="col-md-6">
            <div class="product-gallery">
                <img src="~/Content/images2/@Model.HinhAnh" alt="@Model.TenSanPham" class="main-image img-fluid" />
                <div class="thumbnail-container">
                    <img src="~/Content/images2/@Model.HinhAnh" alt="Ảnh chính" class="thumbnail active" />
                    <img src="~/Content/images2/nam_sn2.jpg" alt="Ảnh phụ" class="thumbnail" />
                    <img src="~/Content/images2/nam_sn3.jpg" alt="Ảnh phụ" class="thumbnail" />
                </div>
            </div>
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <div class="product-info">
                <h1 class="product-title">@Model.TenSanPham</h1>

                <div class="product-price">
                    @if (Model.GiaGoc > 0 && Model.Gia < Model.GiaGoc)
                    {
                        <span class="original-price">@String.Format("{0:N0}đ", Model.GiaGoc)</span>
                    }
                    @String.Format("{0:N0}đ", Model.Gia)
                    @if (Model.PhanTramGiam > 0)
                    {
                        <span class="discount-badge">-@Model.PhanTramGiam%</span>
                    }
                </div>

                <!-- Size -->
                @if (Model.DanhSachSize != null && Model.DanhSachSize.Count > 0)
                {
                    <div class="size-options">
                        <h5>Kích thước:</h5>
                        <div>
                            @foreach (var size in Model.DanhSachSize)
                            {
                                <button class="size-btn">@size</button>
                            }
                        </div>
                    </div>
                }

                <!-- Số lượng -->
                <div class="quantity-selector">
                    <h5 class="mr-3">Số lượng:</h5>
                    <button class="quantity-btn">-</button>
                    <input type="number" class="quantity-input" value="1" min="1" />
                    <button class="quantity-btn">+</button>
                </div>

                <!-- Hành động -->
                <div class="action-buttons">
                    <button class="btn btn-buy-now">Mua ngay</button>
                    <button class="btn btn-add-cart">Thêm vào giỏ</button>
                </div>

                <!-- Mô tả -->
                <div class="product-description mt-4">
                    <ul class="nav nav-tabs description-tabs" id="productTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="desc-tab" data-toggle="tab" href="#desc" role="tab">Mô tả</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="specs-tab" data-toggle="tab" href="#specs" role="tab">Thông số</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab">Đánh giá</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-3">
                        <div class="tab-pane fade show active" id="desc" role="tabpanel">
                            <p>@Model.MoTa</p>
                        </div>
                        <div class="tab-pane fade" id="specs" role="tabpanel">
                            <ul>
                                <li>Chất liệu: @Model.ChatLieu</li>
                                <li>Màu sắc: @Model.MauSac</li>
                                <li>Xuất xứ: @Model.XuatXu</li>
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel">
                            <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm liên quan -->
    <div class="row mt-5">
        <div class="col-lg-12">
            <h4 class="font-weight-bold mb-4" style="color: #ff6b6b;">Sản phẩm liên quan</h4>
            <div class="row">
                @if (ViewBag.SanPhamLienQuan != null)
                {
                    foreach (var sp in ViewBag.SanPhamLienQuan)
                    {
                        <div class="col-md-3 mb-4">
                            <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.Id })" class="text-decoration-none">
                                <div class="card shadow-sm border-0 related-product-item">
                                    <img src="~/Content/images2/@sp.HinhAnh" class="card-img-top" style="height: 200px; object-fit: cover;" />
                                    <div class="card-body text-center">
                                        <h6 class="card-title text-dark">@sp.TenSanPham</h6>
                                        <p class="text-danger font-weight-bold mb-0">@String.Format("{0:N0}đ", sp.Gia)</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted ml-3">Không có sản phẩm liên quan.</p>
                }
            </div>
        </div>
    </div>
</main>

@section Styles {
    <style>
        .main-image {
            width: 100%;
            height: 400px;
            object-fit: contain;
            border-radius: 10px;
            background: #fff;
            margin-bottom: 20px;
        }

        .thumbnail-container {
            display: flex;
            gap: 10px;
        }

        .thumbnail {
            width: 80px;
            height: 80px;
            border-radius: 5px;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .thumbnail:hover, .thumbnail.active {
                border-color: #ff6b6b;
            }

        .product-title {
            font-size: 1.6rem;
            font-weight: 600;
            color: #ff6b6b;
        }

        .product-price {
            font-size: 1.3rem;
            font-weight: 600;
            color: #ff6b6b;
        }

        .btn-buy-now {
            background: #ff6b6b;
            color: white;
            font-weight: bold;
        }

        .btn-add-cart {
            border: 2px solid #ff6b6b;
            color: #ff6b6b;
            font-weight: bold;
        }

        .related-product-item:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.thumbnail').click(function () {
                $('.thumbnail').removeClass('active');
                $(this).addClass('active');
                $('.main-image').attr('src', $(this).attr('src'));
            });

            $('.size-btn').click(function () {
                $('.size-btn').removeClass('active');
                $(this).addClass('active');
            });

            $('.quantity-btn').click(function () {
                const input = $('.quantity-input');
                let val = parseInt(input.val());
                if ($(this).text() === '+') input.val(val + 1);
                else if (val > 1) input.val(val - 1);
            });

            $('.btn-add-cart').click(function () {
                const product = {
                    id: '@Model.Id',
                    title: '@Model.TenSanPham',
                    price: '@String.Format("{0:N0}đ", Model.Gia)',
                    image: '@Url.Content("~/Content/images2/" + Model.HinhAnh)',
                    quantity: parseInt($('.quantity-input').val())
                };
                let cart = JSON.parse(localStorage.getItem('cart')) || [];
                cart.push(product);
                localStorage.setItem('cart', JSON.stringify(cart));

                const toast = $('<div class="custom-toast">Đã thêm vào giỏ hàng!</div>');
                $('body').append(toast);
                setTimeout(() => toast.fadeOut(500, () => toast.remove()), 2000);
            });
        });
    </script>
}
