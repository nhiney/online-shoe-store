@model OnlineShoeStore.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5">
    <div class="row">
        <!-- Thư viện ảnh sản phẩm -->
        <div class="col-md-6">
            <div class="product-gallery">
                <img src="@Url.Content(Model.HinhAnh)" alt="@Model.TenSanPham" class="main-image">
                <div class="thumbnail-container">
                    @* Có thể load nhiều ảnh từ Model nếu bạn thiết kế *@
                    <img src="@Url.Content(Model.HinhAnh)" alt="Thumbnail" class="thumbnail active">
                </div>
            </div>
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <div class="product-info">
                <h1 class="product-title">@Model.TenSanPham</h1>
                <div class="product-price">
                    <span class="original-price">@Model.GiaGoc.ToString("N0") đ</span>
                    @Model.GiaKhuyenMai.ToString("N0") đ
                    <span class="discount-badge">
                        -@((int)((1 - (decimal)Model.GiaKhuyenMai/Model.GiaGoc)*100))%
                    </span>
                </div>

                <!-- Size -->
                <div class="size-options">
                    <h5>Kích thước:</h5>
                    <div>
                        @foreach (var size in Model.DanhSachSize)
                        {
                            <button class="size-btn">@size</button>
                        }
                    </div>
                </div>

                <!-- Số lượng -->
                <div class="quantity-selector">
                    <h5 class="mr-3">Số lượng:</h5>
                    <button class="quantity-btn">-</button>
                    <input type="number" class="quantity-input" value="1" min="1">
                    <button class="quantity-btn">+</button>
                </div>

                <!-- Nút hành động -->
                <div class="action-buttons">
                    <a href="@Url.Action("ThanhToan", "DonHang", new { id = Model.Id })" class="btn btn-buy-now">Mua ngay</a>
                    <button class="btn btn-add-cart" data-id="@Model.Id">Thêm vào giỏ</button>
                </div>

                <!-- Mô tả -->
                <div class="product-description">
                    <ul class="nav nav-tabs description-tabs" id="productTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#description">Mô tả</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#specs">Thông số</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#reviews">Đánh giá</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="description">
                            <p>@Model.MoTa</p>
                        </div>
                        <div class="tab-pane fade" id="specs">
                            <ul>
                                <li>Chất liệu: @Model.ChatLieu</li>
                                <li>Màu sắc: @Model.MauSac</li>
                                <li>Xuất xứ: @Model.XuatXu</li>
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="reviews">
                            <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm liên quan -->
    <div class="row mt-5">
        <div class="col-lg-4 offset-lg-8">
            <div class="bg-white rounded shadow-sm p-4 mb-4">
                <h5 class="font-weight-bold mb-4" style="color: #ff6b6b;">Sản phẩm liên quan</h5>
                <div class="list-group list-group-flush">
                    @foreach (var sp in ViewBag.SanPhamLienQuan as List<OnlineShoeStore.Models.SanPham>)
                    {
                        <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.Id })"
                           class="list-group-item list-group-item-action d-flex align-items-center mb-2 rounded related-product-item">
                            <img src="@Url.Content(sp.HinhAnh)" alt="@sp.TenSanPham" class="rounded mr-3" style="width:60px;height:60px;object-fit:cover;">
                            <div>
                                <div class="font-weight-bold">@sp.TenSanPham</div>
                                <div>
                                    <span class="text-muted" style="text-decoration:line-through;">
                                        @sp.GiaGoc.ToString("N0") đ
                                    </span>
                                    <span class="text-danger font-weight-bold">
                                        @sp.GiaKhuyenMai.ToString("N0") đ
                                    </span>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/Scripts/cart.js"></script>
    <script>
        $(function () {
            // nút chọn size
            $(".size-btn").click(function () {
                $(".size-btn").removeClass("active");
                $(this).addClass("active");
            });

            // nút tăng/giảm số lượng
            $(".quantity-btn").click(function () {
                var input = $(".quantity-input");
                var val = parseInt(input.val());
                if ($(this).text() === "+") input.val(val + 1);
                else if (val > 1) input.val(val - 1);
            });

            // thêm vào giỏ
            $(".btn-add-cart").click(function () {
                var id = $(this).data("id");
                Cart.addToCart(id, $(".quantity-input").val());
            });
        });
    </script>
}
