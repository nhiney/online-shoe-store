@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="mx-auto" style="max-width: 450px;">
        <h3 class="text-center mb-4 text-primary">Đăng ký tài khoản mới</h3>

        @if (ViewBag.ThongBao != null)
        {
            <div class="alert alert-info text-center">@ViewBag.ThongBao</div>
        }

        <form method="post" action="@Url.Action("DangKy", "Account")">
            <div class="form-group">
                <label>Họ và tên</label>
                <input type="text" name="hoTen" class="form-control" placeholder="Nhập họ tên" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="matKhau" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <div class="form-group">
                <label>Xác nhận mật khẩu</label>
                <input type="password" name="xacNhanMatKhau" class="form-control" placeholder="Nhập lại mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Đăng ký</button>

            <p class="text-center mt-3">
                Đã có tài khoản?
                <a href="@Url.Action("DangNhap", "Account")">Đăng nhập ngay</a>
            </p>
        </form>
    </div>
</div>
