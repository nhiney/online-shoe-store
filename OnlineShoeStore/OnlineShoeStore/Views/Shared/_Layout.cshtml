@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MEODIGIAY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <!-- Header -->
    <header class="bg-white py-2 shadow-sm sticky-top">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <!-- Logo -->
                <div class="col-12 col-md-3 d-flex align-items-center justify-content-md-start justify-content-center mb-2 mb-md-0">
                    <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                        <img src="~/Content/images2/logo/logo.png" alt="logo" style="width: 3rem; height: 3rem; object-fit: contain;" class="mr-2" />
                        <span class="h4 mb-0 font-weight-bold text-primary" style="letter-spacing:2px;">MEODIGIAY</span>
                    </a>
                </div>

                <!-- Navigation -->
                <div class="d-none d-md-block col-md-6">
                    <nav>
                        <ul class="nav justify-content-center">
                            <li class="nav-item dropdown px-2">
                                <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdownNam" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Giày nam
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownNam">
                                    <a class="dropdown-item" href="@Url.Action("Nam", "SanPham")">Tất cả giày nam</a>
                                    <a class="dropdown-item" href="#">Dép Kẹp - Dép Xỏ Ngón</a>
                                    <a class="dropdown-item" href="#">Sneaker</a>
                                    <a class="dropdown-item" href="#">Sandal</a>
                                    <a class="dropdown-item" href="#">Giày Lười</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown px-2">
                                <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdownNu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Giày nữ
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownNu">
                                    <a class="dropdown-item" href="@Url.Action("Nu", "SanPham")">Tất cả giày nữ</a>
                                    <a class="dropdown-item" href="#">Sneakers</a>
                                    <a class="dropdown-item" href="#">Dép Lê - Quai Ngang</a>
                                    <a class="dropdown-item" href="#">Dép Kẹp</a>
                                    <a class="dropdown-item" href="#">Sandal</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown px-2">
                                <a class="nav-link text-dark font-weight-bold dropdown-toggle" href="#" id="navbarDropdownTreEm" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Giày trẻ em
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownTreEm">
                                    <a class="dropdown-item" href="@Url.Action("TreEm", "SanPham")">Tất cả giày trẻ em</a>
                                    <a class="dropdown-item" href="#">Sneakers</a>
                                    <a class="dropdown-item" href="#">Dép Lê</a>
                                    <a class="dropdown-item" href="#">Dép Kẹp</a>
                                    <a class="dropdown-item" href="#">Sandal</a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>

                <!-- Search + Buttons -->
                <div class="col-12 col-md-3 d-flex justify-content-md-end justify-content-center align-items-center gap-2 mt-2 mt-md-0">
                    <div class="search-container flex-grow-1 mr-2" style="min-width: 180px;">
                        <input type="search" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                    </div>

                    <a href="@Url.Action("GioHang", "Cart")" class="btn btn-light border d-flex align-items-center justify-content-center mx-1" style="height:38px;width:38px;position:relative;">
                        <i class="fas fa-shopping-cart"></i>
                    </a>

                    <button type="button" class="btn btn-outline-primary px-3 mx-1" style="height:38px;min-width:70px;" data-toggle="modal" data-target="#loginModal">Login</button>
                    <a href="@Url.Action("DangKy", "Account")" class="btn btn-primary px-3 mx-1" style="height:38px;min-width:70px;">Signup</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main body -->
    <div class="container body-content mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    @Html.Partial("_Footer")

    <!-- Modal đăng nhập -->
    @Html.Partial("_Login")

    @Html.Partial("_Signin")


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
